@model QuizApp.Models.TblQuiz

@{
    ViewData["Title"] = "Tạo bài thi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="TblQuizs" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="QuizName" class="control-label">Tên bài thi</label>
                    <input asp-for="QuizName" class="form-control" />
                    <span asp-validation-for="QuizName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Time" class="control-label">Thời gian</label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group form-check mx-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" />Hiện
                    </label>
                </div>
                <div class="form-group col-12">
                    <div class="float-right">
                        <input type="submit" value="Tạo bài viết" class="btn btn-primary" />
                        <a asp-area="Admin" asp-controller="TblQuizs" asp-action="Index" class="btn btn-outline-primary">Hủy</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

