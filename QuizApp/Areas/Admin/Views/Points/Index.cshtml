@model IEnumerable<QuizApp.Models.Point>

@{
    ViewData["Title"] = "Điểm dự thi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Điểm dự thi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bài thi</th>
                        <th>Tổng điểm</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Bài thi</th>
                        <th>Tổng điểm</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@ViewBag.Name</td>
                            <td>@item.TotalPoint</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
