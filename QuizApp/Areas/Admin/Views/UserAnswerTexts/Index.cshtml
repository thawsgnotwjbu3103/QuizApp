@model IEnumerable<QuizApp.Models.UserAnswerText>

@{
    ViewData["Title"] = "Xem trả lời tự luận";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Câu hỏi</th>
                        <th>Dự đoán</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Câu hỏi</th>
                        <th>Dự đoán</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.QuestionText.QuestionTextTitle</td>
                        <td>@item.Matches</td>
                        <td>
                            <a asp-area="Admin" asp-controller="UserAnswerTexts" asp-action="Details" asp-route-id="@item.QuestionTextId" class="btn btn-primary" target="_blank">Xem câu trả lời</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>